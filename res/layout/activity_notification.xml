<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_background" >
 
    <FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <ImageView
	        style="@style/LayoutIndicationBeta"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent" />
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/LayoutIndication"
	        android:orientation="vertical">

		    <ImageView
		        android:id="@+id/indicationImage"
	            android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="10dp"
		        android:src="@drawable/ic_indication_1" />
		    
	        <TextView
	            android:id="@+id/indicationTitle"
	            style="@style/HomeScreenTitleText"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_horizontal"
	            android:text="Indikacija" />

	        <TextView
	            android:id="@+id/notificationDate"
	            style="@style/NotificationDate"
	            android:fontFamily="sans-serif-light"
		       	android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginBottom="@dimen/layout_padding"
	            android:layout_marginTop="@dimen/layout_padding"
	            android:gravity="center_horizontal"
	            android:text="14. maj" />
	        
		    <ImageView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_alarm" />
	        
		    <TextView
		        android:id="@+id/notificationPeriod"
		        style="@style/NotificationPeriod"
		        android:fontFamily="sans-serif-light"
		       	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical|center_horizontal"
		        android:text="Zvecer" />
		    	        
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
		    
	 	        <TextView
	 	            android:id="@+id/notificationVolume"
	 	            style="@style/NotificationText"
	 	            android:fontFamily="sans-serif-light"
		       		android:layout_width="wrap_content"
	 	            android:layout_height="@dimen/title_height"
	 	            android:layout_marginTop="@dimen/button_margin"
	 	            android:layout_marginRight="@dimen/button_margin"
	 	            android:gravity="center_horizontal|center_vertical"
	 	            android:text="3-5 dcl" />
	 	        
	 	        <TextView
		            android:id="@+id/notificationTemp"
		            style="@style/NotificationText"
		            android:fontFamily="sans-serif-light"
		       		android:layout_width="match_parent"
		            android:layout_height="@dimen/title_height"
		            android:layout_marginTop="@dimen/button_margin"
	 	            android:gravity="center_horizontal|center_vertical"
 	            	android:text="Sobna" />
	 	        	 	        
 	        </LinearLayout>
 	        
 	        <TextView
 	            android:id="@+id/notificationSpeed"
 	            style="@style/NotificationText"
 	            android:fontFamily="sans-serif-light"
		       	android:layout_width="match_parent"
 	            android:layout_height="@dimen/title_height"
 	            android:layout_marginTop="@dimen/button_margin"
 	            android:gravity="center_horizontal|center_vertical"
 	            android:text="Pocasi" />
 
		    <LinearLayout
		        android:id="@+id/notificationIcons"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/button_margin"
		        android:layout_marginBottom="@dimen/button_margin"
		        android:orientation="horizontal" >
 	        
 	        </LinearLayout>
		    
		    <Button
		       android:id="@+id/btn_close"
		       android:text="@string/close"
		 	   style="@style/ButtonIndicationStart"
		       android:layout_marginBottom="@dimen/button_margin"
		       android:layout_width="match_parent"
		       android:layout_height="@dimen/button_height" /> 	        
		</LinearLayout>
	    
	</FrameLayout>
     
</LinearLayout>