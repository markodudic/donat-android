<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

   <style name="Title">
       <item name="android:background">@color/background_title</item>
   </style> 
    
   <style name="HomeScreenTitle">
       <item name="android:background">@color/background_title</item>
   </style>

   <style name="IndicationsTitle">
       <item name="android:background">@color/background_title</item>
       <item name="android:paddingTop">@dimen/layout_padding</item>
       <item name="android:paddingBottom">@dimen/layout_padding</item>
       <item name="android:paddingRight">@dimen/title_vertical_padding</item>
       <item name="android:paddingLeft">@dimen/title_vertical_padding</item>
       <item name="android:gravity">center_vertical</item>
   </style>
   
   <style name="IndicationsDate">
       <item name="android:background">@color/background_date</item>
   </style>
   
   <style name="LayoutIndication">
        <item name="android:background">@drawable/dr_border</item>
      	<item name="android:paddingTop">@dimen/button_margin</item>
       <item name="android:paddingBottom">@dimen/button_margin</item>
       <item name="android:paddingRight">@dimen/title_vertical_padding</item>
       <item name="android:paddingLeft">@dimen/title_vertical_padding</item>
   </style>
   
   <style name="LayoutIndicationAlfa">
       <item name="android:background">@color/background_button</item>
       <item name="android:alpha">0.3</item>
   </style>
      
   <style name="TextViewIndication">
       <item name="android:textSize">18.0sp</item>
       <item name="android:textColor">@color/button_text</item>
       <item name="android:paddingRight">@dimen/title_vertical_padding</item>
       <item name="android:gravity">center_vertical</item>
   </style>
	    
