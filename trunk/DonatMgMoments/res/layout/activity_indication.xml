<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".IndicationActivity" >

    <LinearLayout
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_vertical_padding" >

	    <LinearLayout
	        style="@style/IndicationsTitle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
 
	        <ImageView
	            android:id="@+id/indicationImage"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="@dimen/title_vertical_padding"
	            android:src="@drawable/ic_launcher" />

	        <TextView
	            android:id="@+id/indicationTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="Indikacija" />
	        
        </LinearLayout>
        
        <TextView
            android:id="@+id/indicationDesc"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_screen_title" />
       
	</LinearLayout>
	
    
    
    <LinearLayout
        android:id="@+id/drinking_title_layout"
	    style="@style/IndicationsTitle"
	    android:orientation="horizontal"
		android:layout_width="match_parent"
	    android:layout_height="@dimen/title_height"
        android:padding="@dimen/layout_vertical_padding" >

        <TextView
            android:id="@+id/drinking_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/drinking" />
    	
    	<LinearLayout
	        android:layout_width="0dip"
			android:layout_height="0dip"
			android:layout_weight="1" />
    
	    <ImageView
	        android:id="@+id/drinking_arrow"
	        android:layout_height="wrap_content"
	        android:layout_width="@dimen/title_height"
	        android:src="@drawable/ic_arrow_down" />
       </LinearLayout>

    
    <LinearLayout
        android:id="@+id/drinking_data_layout"
      	style="@style/Title"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
        android:padding="@dimen/layout_vertical_padding"
		android:visibility="gone" >
	    
	    <TableLayout
	        android:id="@+id/drinking_data_table"
      		android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
        </TableLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/interval_title_layout"
	    style="@style/IndicationsTitle"
	    android:orientation="horizontal"
        android:padding="@dimen/layout_vertical_padding"
		android:layout_width="match_parent"
	    android:layout_height="@dimen/title_height" >

        <TextView
            android:id="@+id/interval_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/interval" />
    	
    	<LinearLayout
	        android:layout_width="0dip"
			android:layout_height="0dip"
			android:layout_weight="1" />
    
	    <ImageView
	        android:id="@+id/interval_arrow"
	        android:layout_height="wrap_content"
	        android:layout_width="@dimen/title_height"
	        android:src="@drawable/ic_arrow_down" />
    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/interval_data_layout"
      	style="@style/Title"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
        android:padding="@dimen/layout_vertical_padding"
		android:visibility="gone" >
	    
        <TextView
            android:id="@+id/intervalDesc"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interval opis" />
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/start_date_layout"
      	style="@style/IndicationsTitle"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:padding="@dimen/layout_vertical_padding"
		android:orientation="vertical">
	    
        <TextView
            android:id="@+id/startDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/start_date" />

	    <LinearLayout
	        android:id="@+id/start_date_date_layout"
	      	style="@style/IndicationsDate"
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:padding="@dimen/layout_vertical_padding"
			android:orientation="horizontal">
	        
	        <TextView
	            android:id="@+id/startDateDate"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="12 apr 2014" />
        </LinearLayout>
        
        <Button
           android:id="@+id/btn_indication_start"
           android:text="@string/button_indication_start"
		   style="@style/ButtonIndicationStart"
           android:layout_width="match_parent"
           android:layout_height="@dimen/button_height"
           android:layout_weight="1" />
        
        
    </LinearLayout>
    
</LinearLayout>
