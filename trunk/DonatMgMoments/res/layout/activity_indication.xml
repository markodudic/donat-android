<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    tools:context=".IndicationActivity" >


    <ScrollView
        android:id="@+id/scroll_page_step1"
	    android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:fillViewport="true">        
    	<LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:orientation="vertical" >
	        		    
	    <FrameLayout
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >
	
		    <ImageView
		        style="@style/LayoutIndicationAlfaTitle"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent" />
		    
	    
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        style="@style/LayoutIndication"
			        android:orientation="vertical">
		
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal">
			 
				        <ImageView
				            android:id="@+id/indicationImage"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:paddingRight="@dimen/title_vertical_padding"
				            android:src="@drawable/ic_launcher" />
			
				        <TextView
				            android:id="@+id/indicationTitle"
				            style="@style/IndicationTitleText"
				            android:fontFamily="sans-serif"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center_vertical"
				            android:text="Indikacija"
							android:layout_weight="1" />
				        
			    	    <ImageView
					        android:id="@+id/description_arrow"
					        android:layout_height="wrap_content"
					        android:layout_width="@dimen/title_height"
					        android:src="@drawable/ic_menu_open"
					        android:clickable="true" />
				        
					</LinearLayout>
		
			        <TextView
			            android:id="@+id/indicationDesc"
			            style="@style/TabelSecond"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="5dp"
			            android:fontFamily="sans-serif-light"
			            android:autoLink="web"
			            android:text="desc" />

			        <TextView
			            android:id="@+id/indicationDescLong"
			            style="@style/TabelSecond"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="5dp"
			            android:fontFamily="sans-serif-light"
			            android:autoLink="web"
			            android:visibility="gone" />
			        
		 		</LinearLayout>
		
	    </FrameLayout> 	
	    
	   <LinearLayout
	        android:layout_width="match_parent"
			android:layout_height="2dip"
			android:background="@color/transparent_color"
	        android:orientation="vertical" />
	    
	    <FrameLayout
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >

		    <ImageView
		        style="@style/LayoutIndicationBeta"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent" />		

		    	    	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/LayoutIndication"
		        android:orientation="vertical">
		        	    	    
		    			
			    <LinearLayout
			        android:id="@+id/drinking_title_layout"
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/title_height"
			        android:gravity="center_vertical"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:id="@+id/drinking_title"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            style="@style/IndicationSubTitle"
				        android:fontFamily="sans-serif"
				        android:text="@string/drinking" />
			    	
			    	<LinearLayout
				        android:layout_width="0dip"
						android:layout_height="0dip"
						android:layout_weight="1" />
			    
				    <ImageView
				        android:id="@+id/drinking_arrow"
				        android:layout_height="wrap_content"
				        android:layout_width="@dimen/title_height"
				        android:src="@drawable/ic_menu_open"
				        android:clickable="true" />
			    </LinearLayout>
			
			    
			    <LinearLayout
			        android:id="@+id/drinking_data_layout"
			      	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:visibility="gone" >
				    
				    <TableLayout
				        android:id="@+id/drinking_data_table"
			      		android:layout_width="match_parent"
				        android:layout_height="wrap_content" >
			        </TableLayout>
			    </LinearLayout>
			</LinearLayout>
	    </FrameLayout> 	
	    
	   <LinearLayout
	        android:layout_width="match_parent"
			android:layout_height="2dip"
			android:background="@color/transparent_color"
	        android:orientation="vertical" />
	    
	    <FrameLayout
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >
				    
		    <ImageView
		        style="@style/LayoutIndicationBeta"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent" />		
	        
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/LayoutIndication"
		        android:orientation="vertical">
		    
		        <LinearLayout
			        android:id="@+id/interval_title_layout"
				    android:orientation="horizontal"
			        android:layout_width="match_parent"
				    android:gravity="center_vertical"
			        android:layout_height="@dimen/title_height" >
			
			        <TextView
			            android:id="@+id/interval_title"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            style="@style/IndicationSubTitle"
				            android:fontFamily="sans-serif"
				            android:text="@string/interval" />
			    	
			    	<LinearLayout
				        android:layout_width="0dip"
						android:layout_height="0dip"
						android:layout_weight="1" />
			    
				    <ImageView
				        android:id="@+id/interval_arrow"
				        android:layout_height="wrap_content"
				        android:layout_width="@dimen/title_height"
				        android:src="@drawable/ic_menu_open"
				        android:clickable="true" />
			    </LinearLayout>
			
			    
			    <LinearLayout
			        android:id="@+id/interval_data_layout"
			      	android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:visibility="gone" >
				    
			        <TextView
			            android:id="@+id/intervalDesc"
			            style="@style/TabelSecond"
			            android:fontFamily="sans-serif-light"
				        android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="Interval opis" />
	
			    </LinearLayout>
			</LinearLayout>
	    </FrameLayout> 	
	    
	   <LinearLayout
	        android:layout_width="match_parent"
			android:layout_height="2dip"
			android:background="@color/transparent_color"
	        android:orientation="vertical" />
	    
	    <FrameLayout
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >
			    		
		    <ImageView
		        style="@style/LayoutIndicationBeta"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent" />		
	        				    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/LayoutIndication"
		        android:orientation="vertical">
		    			    
		    	<LinearLayout
			        android:id="@+id/start_date_layout"
			      	android:layout_width="match_parent"
					android:layout_height="wrap_content"
			        android:orientation="vertical">
				    
			        <TextView
			            android:id="@+id/startDateTitle"
			            style="@style/IndicationSubTitle"
				        android:fontFamily="sans-serif"
				        android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_marginBottom="5dp"
			            android:text="@string/start_date" />
			
				    <FrameLayout
				        android:id="@+id/start_date_date_layout"
				      	android:layout_width="match_parent"
						android:layout_height="wrap_content"
				        android:padding="@dimen/button_margin"
						style="@style/IndicationsDate"
		        		android:orientation="horizontal">

					    <LinearLayout
					        android:layout_width="match_parent"
							android:layout_height="wrap_content"
					        android:orientation="horizontal">
				        				        
				        <TextView
				            android:id="@+id/startDateDate"
				            style="@style/StartDate"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="12" /> 
	
				        <LinearLayout
					        android:layout_width="0dip"
							android:layout_height="0dip"
							android:layout_weight="1" />
			        
				        <TextView
				            android:id="@+id/startDateMonth"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            style="@style/StartDate"
		        			android:text="apr" />
	
				        <LinearLayout
					        android:layout_width="0dip"
							android:layout_height="0dip"
							android:layout_weight="1" />
				        			        			        
				        <TextView
				            android:id="@+id/startDateYear"
				            style="@style/StartDate"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="2014" />

				        </LinearLayout>			        			        			        
				    </FrameLayout>
			        
			        <Button
			           android:id="@+id/btn_indication_start"
			           android:text="@string/button_indication_start"
					   style="@style/ButtonIndicationStart"
			           android:fontFamily="sans-serif"
				       android:layout_width="match_parent"
			           android:layout_height="@dimen/button_height"
			           android:layout_weight="1" />
			        
			    </LinearLayout>
	 	    
		 	</LinearLayout>	    

		</FrameLayout> 
	    
 	  	<LinearLayout
	        style="@style/LayoutIndication"
    		android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:background="@color/background_settings"
	        android:orientation="vertical">    
		   	
		   	<ImageView
	            android:id="@+id/add"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:padding="@dimen/title_vertical_padding"
	            android:src="@drawable/ic_add" />		    
 	    </LinearLayout>   
 	    
 	  	<LinearLayout
	        android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/background_white_50"
	        android:orientation="vertical" />
 	  	
    </LinearLayout>
</ScrollView>     
	    
</LinearLayout>
