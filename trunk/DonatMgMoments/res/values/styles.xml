<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

   <style name="Title">
       <item name="android:background">@color/background_title</item>
   </style> 
    
   <style name="HomeScreenTitle">
       <item name="android:background">@color/background_title</item>
       <item name="android:layout_marginBottom">@dimen/layout_margin</item>
   </style>

   <style name="IndicationsTitle">
       <item name="android:background">@color/background_title</item>
       <item name="android:layout_marginTop">@dimen/layout_margin</item>
   </style>
   
   <style name="IndicationsDate">
       <item name="android:background">@color/background_date</item>
   </style>
   
   
   <style name="ButtonIndicationLeft">
       <item name="android:textSize">18.0sp</item>
       <item name="android:textColor">@color/button_text</item>
       <item name="android:background">@drawable/dr_unselected</item>
       <item name="android:layout_width">200dp</item>
       <item name="android:layout_height">100dp</item>
       <item name="android:layout_marginTop">0dp</item>
       <item name="android:layout_marginBottom">@dimen/button_margin</item>
       <item name="android:layout_marginRight">@dimen/button_margin</item>
       <item name="android:gravity">center_vertical|center_horizontal</item>
	   <item name="android:paddingTop">@dimen/button_margin</item>
   </style>

   <style name="ButtonIndicationRight" parent="ButtonIndicationLeft">
       <item name="android:layout_marginRight">0dp</item>
   </style>
   
   <style name="ButtonIndicationStart">
	   <item name="android:layout_marginTop">@dimen/button_margin</item>
       <item name="android:textSize">18.0sp</item>
       <item name="android:textColor">@color/button_text</item>
       <item name="android:background">@drawable/dr_button</item>
       <item name="android:gravity">center_vertical|center_horizontal</item>
   </style>   
  
   <style name="Dialog" parent="@android:style/Theme.Dialog">
	    <item name="android:windowNoTitle">true</item>
   </style>
	
   <style name="DialogTitle">
       <item name="android:background">@color/background_dialog</item>
   </style>   
</resources>
